{
  "manifest_version": 3,
  "name": "Translating Words",
  "version": "1.0",
  "description": "提供界面划词翻译功能",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "划词翻译插件"
  }
}
